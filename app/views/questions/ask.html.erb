<!-- app/views/questions/ask.html.erb -->
<form action="/answer" method="get" id="ask-coach">
    <label for="question">Ask your coach anything:</label>
    <div class="form-group form-inline">
      <input type="text" name="question" id="question" value="<%= params[:question] %>" class="form-control form-control-lg flex-grow-1">
      <input type="submit" value="Ask" class="btn btn-primary btn-lg">
    </div>
</form>

